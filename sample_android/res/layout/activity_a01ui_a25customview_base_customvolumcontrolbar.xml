<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:samy="http://schemas.android.com/apk/res/com.zsy.frame.sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55ffffff"
    android:orientation="vertical"
    tools:context=".CustomVolumControlBarAct" >

    <com.zsy.frame.sample.control.android.a01ui.a25customview.base.views.CustomVolumControlBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        samy:bg="@drawable/ic_launcher"
        samy:circleWidth="12dp"
        samy:dotCount="20"
        samy:firstColor="#252420"
        samy:secondColor="#FDFDFD"
        samy:splitSize="25" />

    <com.zsy.frame.sample.control.android.a01ui.a25customview.base.views.CustomVolumControlBar
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        samy:bg="@drawable/a01ui_a25customview_base_customtmageview_icon"
        samy:circleWidth="10dp"
        samy:dotCount="10"
        samy:firstColor="#00ff00"
        samy:secondColor="#ff0000"
        samy:splitSize="15" />

    <com.zsy.frame.sample.control.android.a01ui.a25customview.base.views.CustomVolumControlBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        samy:bg="@drawable/ic_launcher"
        samy:circleWidth="10dp"
        samy:dotCount="8"
        samy:firstColor="#ADC6E5"
        samy:secondColor="#0362DB"
        samy:splitSize="25" />

</LinearLayout>