<com.zsy.frame.sample.control.android.a01ui.a21draw_chart.ownpaint.views.DateSwitchView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_left_arrow"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/a01ui_a21draw_chart_ownpaint_bodydata_btn_left_arrow"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_text_select"
            android:text="@string/today"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="15sp"
            android:id="@+id/data_text"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_right_arrow"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/a01ui_a21draw_chart_ownpaint_bodydata_btn_right_arrow"
            android:paddingRight="20dp"/>
</com.zsy.frame.sample.control.android.a01ui.a21draw_chart.ownpaint.views.DateSwitchView>
